<div class="detail">
  <div class="left">
    <div class="status">
      <span>Status:</span>
      {{field status}}
    </div>
    <div class="whiteboard">
      <span>Whiteboard:</span>
      <span></span>
    </div>
    <div class="keywords">
      <span>Keywords:</span>
      <span>{{field keywords}}</span>
    </div>
    <div class="product">
      <span>Product:</span>
      <span>{{field product}}</span>
    </div>
    <div class="component">
      <span>Component:</span>
      <span>{{field component}}</span>
    </div>
    <div class="version">
      <span>Version:</span>
      <span>{{field version}}</span>
    </div>
    <div class="platform">
      <span>Hardware:</span>
      <span>{{field platform}} {{field op_sys}}</span>
    </div>
    <div class="importance">
      <span>Importance:</span>
      <span>
        <span>{{field priority}}</span>
        <span>{{field severity}}</span>
      </span>
    </div>
    <div class="assigned_to">
      <span>Assignee:</span>
      <span>{{field assigned_to}}</span>
    </div>
    <div class="qa_contact">
      <span>QA Contact:</span>
      <span>{{field qa_contact}}</span>
    </div>
    <div class="url">
      <span>URL:</span>
      <span>{{field url}}</span>
    </div>
    <div class="depends_on">
      <span>Depends on:</span>
      <ul>
        {{#each depends_on}}
        <li {{bindAttr title="summary"}}>
        {{#linkTo "bug" this classNameBindings="isResolved"}}{{field aliasOrId}}{{/linkTo}}
        </li>
        {{else}}
        {{#if depends_on.isLoaded}}
        <em>none</em>
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="blocks">
      <span>Blocks:</span>
      <ul>

        {{#each blocks}}
        <li {{bindAttr title="summary"}}>
        {{#linkTo "bug" this classNameBindings="isResolved"}}{{field aliasOrId}}{{/linkTo}}
        </li>
        {{else}}
        {{#if blocks.isLoaded}}
        <em>none</em>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="padding"></div>

  <div class="right">
    <div class="creator">
      <span>Reported:</span>
      <span>{{field creation_time}} by {{field creator}}</span>
    </div>
    <div class="last_change_time">
      <span>Modified:</span>
      <span>{{field last_change_time}}</span>
    </div>
    <div class="cc">
      <span>CC List:</span>
      <span>
        {{#if cc}}
        {{cc.length}} users
        <span>
          <ul>
            {{#each cc}}
            <li>{{field name}}</li>
            {{/each}}
          </ul>
        </span>
        {{/if}}
      </span>
    </div>
    <div class="flags">
      <span>Flags:</span>
      <ul>
        {{#each flags}}
        <li>
        {{setter}}: {{name}} {{view 'flagSelect' selectionBinding="status"}}
        </li>
        {{/each}}
      </ul>
    </div>

    {{#each customFields itemController="fieldShow"}}
      {{#unless isHidden}}
        <div {{bind-attr class="api_name"}}>
          <span>
            {{#if display_name}}
              {{display_name}}:
            {{else}}
              {{api_name}}:
            {{/if}}
          </span>
          {{field current_value}}
        </div>
      {{/unless}}
    {{/each}}
  </div>
</div>
